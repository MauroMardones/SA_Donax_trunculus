keywords = {Conservation strategy,Donax deltoides,Effects of fishing,Environmental impact,Management evaluation,Protected area},
mendeley-groups = {Donux{\_}truculus},
pages = {108--117},
publisher = {Elsevier B.V.},
title = {{Assessment of spatial fishing closures on beach clams}},
volume = {5},
year = {2016}
