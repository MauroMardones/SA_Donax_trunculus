journal = {Mediterranean Marine Science},
keywords = {Artisanal fishing mechanised dredges,Callista chione,Mediterranean Sea,Stock status},
mendeley-groups = {Donux{\_}truculus},
number = {1},
pages = {1--10},
title = {{Exploitation status and stock assessment of the smooth clam Callista chione (Linnaeus, 1758) in the northern Alboran Sea (GSA01-W Mediterranean Sea)}},
