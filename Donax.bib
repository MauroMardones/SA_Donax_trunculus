issn = {18790291},
journal = {Marine Environmental Research},
keywords = {Coastal waters,Discards,Fishery management,Fishery regulations,Hydraulic dredging,Shell damage,Striped venus clam,Survivability},
mendeley-groups = {Donux{\_}truculus},
number = {February},
pages = {105954},
pmid = {36940559},
publisher = {Elsevier Ltd},
title = {{Evaluation and quantification of shell damage and survival of the striped venus clam (Chamelea gallina) harvested by hydraulic dredges}},
url = {https://doi.org/10.1016/j.marenvres.2023.105954},
volume = {187},
