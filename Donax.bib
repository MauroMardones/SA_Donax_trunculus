doi = {10.1080/19425120.2015.1007183},
file = {:Users/mauriciomardones/IFOP/Escritos/Paper{\_}Macha/Referencias/Harvesting the Beach Clam Tivela mactroides Short and Long Term Dynamics.pdf:pdf},
